{
  "name": "wechat-api-proxy",
  "version": "2.0.0",
  "description": "通用微信API代理服务器，支持微信公众号草稿管理和素材管理等功能",
  "main": "server.js",
  "scripts": {
    "install:prod": "npm install --omit=dev",	  
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:check": "eslint . --ext .js --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "precommit": "npm run lint:check && npm run format:check",
    "test": "mocha test/**/*.js --exit",
    "test:watch": "mocha test/**/*.js --watch",
    "test:coverage": "nyc npm test",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "build": "echo 'No build step required for this project'",
    "docker:build": "docker build -t wechat-api-proxy .",
    "docker:run": "docker run -p 3000:3000 wechat-api-proxy"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.7",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "nyc": "^15.1.0",
    "supertest": "^6.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  }
}
